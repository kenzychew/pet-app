{
  "info": {
    "name": "Pet Grooming API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Ken\",\n  \"email\": \"kenzy@gmail.com\",\n  \"password\": \"Super123!\",\n  \"role\": \"owner\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register a new user (owner or groomer)"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"kenzy@gmail.com\",\n  \"password\": \"Super123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login and get authentication token"
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            },
            "description": "Get current user profile"
          }
        }
      ]
    },
    {
      "name": "Pets",
      "item": [
        {
          "name": "Get All Pets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/pets",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pets"]
            },
            "description": "Get all pets for current owner"
          }
        },
        {
          "name": "Get Pet by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/pets/{{petId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pets", "{{petId}}"]
            },
            "description": "Get a specific pet by ID"
          }
        },
        {
          "name": "Create Pet",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Penpen\",\n  \"species\": \"Dog\",\n  \"breed\": \"Shihtzu\",\n  \"age\": 3,\n  \"notes\": \"Very friendly\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/pets",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pets"]
            },
            "description": "Create a new pet (owner only)"
          }
        },
        {
          "name": "Update Pet",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Penpen\",\n  \"age\": 4,\n  \"notes\": \"Very friendly and calm\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/pets/{{petId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pets", "{{petId}}"]
            },
            "description": "Update a pet's information (owner only)"
          }
        },
        {
          "name": "Delete Pet",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/pets/{{petId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pets", "{{petId}}"]
            },
            "description": "Delete a pet (owner only)"
          }
        }
      ]
    },
    {
      "name": "Groomers",
      "item": [
        {
          "name": "Get All Groomers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/groomers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "groomers"]
            },
            "description": "Get all available groomers"
          }
        },
        {
          "name": "Get Groomer by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/groomers/{{groomerId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "groomers", "{{groomerId}}"]
            },
            "description": "Get a specific groomer by ID"
          }
        },
        {
          "name": "Get Groomer Availability",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/groomers/{{groomerId}}/availability?date=2025-03-15&duration=60",
              "host": ["{{baseUrl}}"],
              "path": ["api", "groomers", "{{groomerId}}", "availability"],
              "query": [
                {
                  "key": "date",
                  "value": "2025-03-15"
                },
                {
                  "key": "duration",
                  "value": "60"
                }
              ]
            },
            "description": "Get available time slots for a groomer on a specific date"
          }
        }
      ]
    },
    {
      "name": "Appointments",
      "item": [
        {
          "name": "Create Appointment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"petId\": \"{{petId}}\",\n  \"groomerId\": \"{{groomerId}}\",\n  \"serviceType\": \"basic\",\n  \"startTime\": \"2025-03-15T10:00:00Z\",\n  \"endTime\": \"2025-03-15T11:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/appointments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments"]
            },
            "description": "Book a new appointment (owner only)"
          }
        },
        {
          "name": "Get User Appointments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/appointments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments"],
              "query": [
                {
                  "key": "status",
                  "value": "confirmed",
                  "disabled": true
                }
              ]
            },
            "description": "Get all appointments for current user (owner sees their appointments, groomer sees appointments assigned to them)"
          }
        },
        {
          "name": "Get Appointment by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/appointments/{{appointmentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments", "{{appointmentId}}"]
            },
            "description": "Get a specific appointment by ID"
          }
        },
        {
          "name": "Update Appointment Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"cancelled\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/appointments/{{appointmentId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments", "{{appointmentId}}", "status"]
            },
            "description": "Update appointment status (cancel or complete)"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "petId",
      "value": "",
      "type": "string"
    },
    {
      "key": "groomerId",
      "value": "",
      "type": "string"
    },
    {
      "key": "appointmentId",
      "value": "",
      "type": "string"
    }
  ]
}
